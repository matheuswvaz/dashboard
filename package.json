{
  "name": "site-comercial-nepen-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "CLIENT",
    "SERVER"
  ],
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "npm install --prefix server && npm install --prefix client",
    "dev:client": "npm run start --workspace=CLIENT",
    "dev:server": "npm run dev --workspace=SERVER",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build:client": "npm run build --workspace=CLIENT",
    "build:server": "npm run build --workspace=SERVER",
    "build": "npm run build:client && npm run build:server",
    "install:all": "npm install --workspaces --if-present",
    "test:client": "npm test --workspace=CLIENT",
    "test:server": "npm test --workspace=SERVER",
    "lint:client": "npm run lint --workspace=CLIENT",
    "lint:server": "npm run lint --workspace=SERVER"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "react-cookie-consent": "^9.0.0",
    "use-debounce": "^10.0.5"
  }
}
